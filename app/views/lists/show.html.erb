<h1><%= @list.title %></h1>
<% @bookmarks_needed.each do |bookmark| %>
  <% tool = Tool.find(bookmark.tool_id) %>
  <% user = User.find(tool.user_id) %>
  <% profile = Profile.find(user.id) %>
  <%#might need to change line method %>
  <ul>
    <li><%= tool.title %></li>
    <li><%= tool.description %></li>
    <li><%= tool.rating %></li>
    <li><%= tool.url %></li>
    <li><%= profile.user_name %></li>
  </ul>
  <%= link_to "Remove Tool from Toolbox", tool_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} if policy(bookmark).destroy? %>
<% end %>

<%= link_to "Delete List", @list, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} if policy(bookmark).destroy? %>
<%= link_to "Edit List", edit_list_path(@list), data: {turbo_method: :edit} if policy(@list).update? %>
