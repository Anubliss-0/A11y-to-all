            <%= cl_image_tag tool.photo.key, height: 120, width: 120 %>
          <% else %>
            <%=image_tag("tool-svgrepo-com.svg") %>
          <% end %>
        </div>
        <div class="name-desc">
          <h2><%= link_to tool.title, tool_path(tool) %></h2>
          <p class="ellipsis3 p_card"><%= tool.description %></p>
        </div>
        <div class="date-rate">
          <span><%= tool.rating %>â˜…</span>
          <%= tool.created_at.strftime('%m/%Y') %>
        </div>
      </div>
      <% end %>
  </div>

