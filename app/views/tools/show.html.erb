<h1><%= @tool.title %></h1>
<ul>
  <li><%= @tool.title %></li>
  <li><%= @tool.description %></li>
  <li><%= @tool.url %></li>
  <li><%= @tool.rating %></li>
  <li><%= @tool.user_id %></li>
  <li><%= @tool.title %></li>
</ul>

<%= link_to "Leave a review", new_tool_review_path(@tool) %>

<% @reviews.each do |review| %>
  <p><%= review.content %></p>
<% end %>

<%= link_to "Back to index", tools_path %>
<%# Add JS to create Confirmation box %>
<%= button_to "Destroy this tool", @tool, method: :delete if policy(@tool).destroy? %>
<% if policy(@tool).edit? %>
  <%= link_to "Edit This Tool", edit_tool_path(@tool) %>
<% end %>
