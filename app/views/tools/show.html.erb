<h1><%= @tool.title %></h1>
<ul>
  <li><%= @tool.title %></li>
  <li><%= @tool.description %></li>
  <li><%= @tool.url %></li>
  <li><%= @tool.rating %></li>
  <li><%= @tool.user_id %></li>
</ul>

<%= link_to "Leave a review", new_tool_review_path(@tool) %>

<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
  <%= link_to "Delete this review", review_path(review), data: { "turbo-method": :delete } if policy(review).destroy? %>
  <%= link_to "Edit this review", edit_review_path(review) if policy(review).update? %>
<% end %>

<%= link_to "Back to index", tools_path %>
<%# Add JS to create Confirmation box %>
<%= button_to "Delete this tool", @tool, method: :delete if policy(@tool).destroy? %>
<% if policy(@tool).edit? %>
  <%= link_to "Edit This Tool", edit_tool_path(@tool) %>
<% end %>
